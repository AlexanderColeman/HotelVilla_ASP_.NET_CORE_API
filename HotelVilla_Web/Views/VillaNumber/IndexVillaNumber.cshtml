@using HotelVilla_Web.Models.Dto
@model IEnumerable<VillaNumberDTO>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Villa Number List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Villa Number</a>
		</div>
	</div>

	<table class="table">
		<thead>
		<th>
			Villa Name
		</th>
		<th>
			Villa Number
		</th>
		<th></th>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Villa.Name</td>
					<td>@item.VillaNo</td>

					<td>
						<a asp-controller="Villa" asp-action="UpdateVillaNumber" asp-route-VillaNo="@item.VillaNo" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Villa" asp-action="DeleteVillaNumber" asp-route-VillaNo="@item.VillaNo" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

